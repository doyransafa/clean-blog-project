<%- include('partials/_header') -%>

<body>

  <!-- Navigation -->

  <%- include('partials/_navigation') -%>

  <!-- Page Header -->
  <header class="masthead" style="background-image: url('img/home-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="site-heading">
            <h1>Clean Blog</h1>
            <span class="subheading">A Blog Theme by Start Bootstrap</span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <div class="container">
    <div class="row  d-block">
      <h1 class="text-center" style="color:#0C5E70 ">Latest Posts</h1>
    </div>
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">

        <% for (let i = 0; i < posts.length; i++) { %>

        <div class="post-preview">
          <a href="/post/<%= posts[i].id %>">
            <h2 class="post-title">
              <%= posts[i].title %>
            </h2>
            <h3 class="post-subtitle">
              <%= posts[i].post.split('</\p>')[0].replaceAll(/<[^>]*>/g, '').slice(0,200) %>
            </h3>
          </a>
          <p class="post-meta">Posted by
            <a href="#"><%= posts[i].author %></a>
            on <%= posts[i].postDate.toLocaleDateString('tr-TR', options) %></p>
        </div>
        <hr>

        <% } %>

        <!-- Pager -->
        <div class="clearfix">
          <a class="btn btn-primary float-right" href="#">Older Posts &rarr;</a>
        </div>
      </div>
    </div>
  </div>

  <hr>

  <!-- Footer -->
  
  <%- include('partials/_footer') -%>

  <!-- Bootstrap core JavaScript -->
  <script src="/vendor/jquery/jquery.min.js"></script>
  <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  <!-- Custom scripts for this template -->
  <script src="/js/clean-blog.min.js"></script>

</body>

</html>
