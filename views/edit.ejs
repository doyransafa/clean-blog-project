<%- include('partials/_header') -%>

<body>

  <!-- Navigation -->

  <%- include('partials/_navigation') -%>

  <!-- Page Header -->
  <header class="masthead" style="background-image: url('/img/contact-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="page-heading">
            <h1>Edit Post</h1>

          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <form novalidate id="post_add" method="POST" action="/edit/<%- post._id %>?_method=PUT">
          <div class="control-group">
            <div class="form-group floating-label-form-group controls">
              <label>Author Name</label>
              <input name="author" type="text" class="form-control" placeholder="Author Name" id="name" value="<%- post.author %>" required data-validation-required-message="Please enter your name!">
              <p class="help-block text-danger"></p>
            </div>
            <div class="form-group floating-label-form-group controls">
              <label>Post Title</label>
              <input name="title" type="text" class="form-control" placeholder="Post Title" id="title" value="<%- post.title %>" required data-validation-required-message="Please enter post title!">
              <p class="help-block text-danger"></p>
            </div>
          </div>
          <div class="control-group">
            <div class="form-group floating-label-form-group controls">
              <label>Post Detail</label>
              <textarea name="post" rows="5" class="form-control" placeholder="Post Detail" id="post" required data-validation-required-message="Please enter a message."><%- post.post %></textarea>
              <p class="help-block text-danger"></p>
            </div>
            
          </div>
          <div class="row">
            <button type="submit" class="btn btn-primary rounded-1 ml-auto mr-0 tm-btn-animate tm-btn-submit tm-icon-submit col-3"><span>Update</span></button>
          </div>

        </form>
      </div>
    </div>
  </div>

  <hr>

  <!-- Footer -->
  
  <%- include('partials/_footer') -%>

  <!-- Bootstrap core JavaScript -->
  <script src="vendor/jquery/jquery.min.js"></script>
  <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  <!-- Contact Form JavaScript -->
  <script src="js/jqBootstrapValidation.js"></script>
  <script src="js/contact_me.js"></script>

  <!-- Custom scripts for this template -->
  <script src="js/clean-blog.min.js"></script>

</body>

</html>
